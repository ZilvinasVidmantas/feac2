{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Study Programs API",
    "description": "API for managing study programs"
  },
  "host": "localhost:5005",
  "basePath": "/api/study-programs",
  "schemes": ["http"],
  "paths": {
    "/": {
      "get": {
        "summary": "Get all study programs",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Add a new study program",
        "parameters": [
          {
            "name": "studyProgram",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/StudyProgram"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "summary": "Get a specific study program",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "summary": "Update a study program",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "studyProgram",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/StudyProgram"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "summary": "Delete a study program",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "definitions": {
    "StudyProgram": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "durationInHours": {
          "type": "number"
        }
      },
      "required": ["name", "price", "durationInHours"]
    }
  }
}